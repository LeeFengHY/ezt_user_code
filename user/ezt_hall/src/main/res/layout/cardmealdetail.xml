<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/activity_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buyLayout"
        android:layout_below="@+id/titleLayout"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cardImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:padding="@dimen/more2_large_margin"
                android:scaleType="centerInside"/>

            <include layout="@layout/hor_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/medium_margin" >

                <TextView
                    android:id="@+id/mealName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_margin"
                    android:text="医指通健康卡"
                    android:textSize="@dimen/large_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/mealName"
                    android:layout_below="@+id/mealName"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="月销量：220"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size" />

                <TextView
                    android:id="@+id/mealPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/large_margin"
                    android:text="￥ 59"
                    android:textColor="@color/main_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <include layout="@layout/hor_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_margin"
                    android:drawableTop="@drawable/platform_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/large_margin"
                    android:paddingTop="@dimen/large_margin"
                    android:text="平台认证"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size" />

                <include
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/small_margin"
                    layout="@layout/ver_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_margin"
                    android:drawableTop="@drawable/team_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/large_margin"
                    android:paddingTop="@dimen/large_margin"
                    android:text="专业团队"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size" />

                <include
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/small_margin"
                    layout="@layout/ver_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/small_margin"
                    android:drawableTop="@drawable/train_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/large_margin"
                    android:paddingTop="@dimen/large_margin"
                    android:text="严格培训"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size" />
            </LinearLayout>

            <include layout="@layout/hor_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/itemsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/medium_margin"
                    android:text="| 服务内容"
                    android:textColor="@color/light_main_color"
                    android:textSize="@dimen/large_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/service_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/processLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/medium_margin"
                    android:text="| 服务流程"
                    android:textColor="@color/light_main_color"
                    android:textSize="@dimen/large_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/service_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/noticeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/medium_margin"
                    android:text="| 服务须知"
                    android:textColor="@color/light_main_color"
                    android:textSize="@dimen/large_size"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/service_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:textColor="@color/font_unclick_color"
                    android:textSize="@dimen/medium_size"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/buyLayout"
        layout="@layout/hor_line" />

    <RelativeLayout
        android:id="@+id/buyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="@dimen/more_large_margin" >

        <TextView
            android:id="@+id/buyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/large_margin"
            android:text=""
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/large_margin"
            android:background="@drawable/selector_main_btn_bg"
            android:paddingBottom="@dimen/large_margin"
            android:paddingLeft="@dimen/more2_large_margin"
            android:paddingRight="@dimen/more2_large_margin"
            android:paddingTop="@dimen/large_margin"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_size" />
    </RelativeLayout>

</RelativeLayout>