<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/medium_margin"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingTop="@dimen/medium_margin" >

        <ImageView
            android:id="@+id/item_informate_img"
            android:layout_width="@dimen/img_width_normal"
            android:layout_height="@dimen/img_height_normal"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/item_informate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_informate_img"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/item_informate_img"
            android:ellipsize="end"
            android:paddingRight="@dimen/small_margin"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@android:color/black"
            android:textSize="@dimen/medium_size" />
<!--             android:layout_below="@+id/item_informate_title" -->
        <TextView
            android:id="@+id/item_informate_info"
            style="@style/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_informate_img"
            android:layout_alignLeft="@+id/item_informate_title"

            android:layout_marginTop="3dip"
            android:layout_marginRight="@dimen/medium_margin"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:gravity="bottom"
            android:paddingTop="@dimen/medium_margin"
            android:paddingRight="@dimen/small_margin"
            android:text="内容"
            android:textColor="@color/main_txt_color" />
    </RelativeLayout>

    <include
        android:id="@+id/item_hor_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        layout="@layout/hor_line" />

</LinearLayout>