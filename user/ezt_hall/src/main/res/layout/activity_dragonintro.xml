<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <include
        android:id="@+id/title_"
        layout="@layout/activity_title_bar" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/more2_large_margin"
                android:text="一张管就医的储蓄卡"
                android:textColor="@color/dark_black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/title"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="专席预约、专业导诊、贴心管家"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ic_dragon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/more2_large_margin"
                android:src="@drawable/ic_dargon" />

            <RelativeLayout
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_dragon"
                android:layout_margin="@dimen/more2_large_margin" >

                <include layout="@layout/item_dargon1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/ic_dragon_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content1"
                android:layout_margin="@dimen/more2_large_margin" />

            <ImageView
                android:id="@+id/dargon_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_dragon_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dargon" />

            <TextView
                android:id="@+id/ic_dragon_textbt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dargon_bt"
                android:layout_margin="@dimen/more2_large_margin" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>