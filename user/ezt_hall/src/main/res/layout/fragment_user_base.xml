        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:visibility="gone"
            android:paddingBottom="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin" >

            <LinearLayout
                android:id="@+id/readyRegistedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_item_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/registedNumTV"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@android:color/holo_red_light" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已预约"
                    android:textSize="@dimen/medium_size" />
            </LinearLayout>

            <include layout="@layout/ver_line" />

            <LinearLayout
                android:id="@+id/notPayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_item_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/notPayNumTV"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/holo_red_light" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="未支付"
                    android:textSize="@dimen/medium_size" />
            </LinearLayout>

            <include layout="@layout/ver_line" />

            <LinearLayout
                android:id="@+id/notUseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_item_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/notUseNumTV"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@android:color/holo_red_light" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="未使用"
                    android:textSize="@dimen/medium_size" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/hor_line" />
        <!-- 2016-1-8 2.6版本 我的收藏 -->

        <LinearLayout
            android:id="@+id/myCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_setting_item_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="@dimen/large_margin"
                android:gravity="center_vertical"
                android:padding="@dimen/small_margin"
                android:text="我的收藏"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/medium_size" />
        </LinearLayout>

        <include layout="@layout/hor_line" />

        <LinearLayout
            android:id="@+id/familyPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_setting_item_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="@dimen/large_margin"
                android:gravity="center_vertical"
                android:padding="@dimen/small_margin"
                android:text="家庭成员"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/medium_size" />
        </LinearLayout>
