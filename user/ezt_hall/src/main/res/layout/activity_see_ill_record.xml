<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hor_height"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin" >

        <TextView
            android:id="@+id/textView1"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="费用" />

        <TextView
            android:id="@+id/see_ill_free_tv"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/more_large_margin"
            android:text="20元"
            android:textColor="@color/main_color" />
    </RelativeLayout>

    <include layout="@layout/hor_line" />

    <RelativeLayout
        android:id="@+id/see_ill_hos_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hor_height"
        android:background="@drawable/selector_setting_item_bg"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/medium_margin" >

        <TextView
            android:id="@+id/text1"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="就诊医院" />

        <TextView
            android:id="@+id/see_ill_hos_tv"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_toRightOf="@+id/text1"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="2"
            android:text="选择医院"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrows" />
    </RelativeLayout>

    <include layout="@layout/hor_line" />

    <RelativeLayout
        android:id="@+id/see_ill_dept_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hor_height"
        android:background="@drawable/selector_setting_item_bg"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/medium_margin" >

        <TextView
            android:id="@+id/text2"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="就诊科室" />

        <TextView
            android:id="@+id/see_ill_dept_tv"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toRightOf="@+id/text2"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="2"
            android:text="选择科室"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrows" />
    </RelativeLayout>

    <include layout="@layout/hor_line" />

    <RelativeLayout
        android:id="@+id/see_ill_doc_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hor_height"
        android:background="@drawable/selector_setting_item_bg"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/medium_margin" >

        <TextView
            android:id="@+id/text3"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="就诊专家" />

        <TextView
            android:id="@+id/see_ill_doc_tv"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toRightOf="@+id/text3"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="2"
            android:text="选择专家"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrows" />
    </RelativeLayout>

    <include layout="@layout/hor_line" />

    <RelativeLayout
        android:id="@+id/see_ill_record_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hor_height"
        android:background="@drawable/selector_setting_item_bg"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/medium_margin" >

        <TextView
            android:id="@+id/text4"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="选择病历" />

        <TextView
            android:id="@+id/see_ill_record_tv"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toLeftOf="@+id/imageView5"
            android:layout_toRightOf="@+id/text4"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="2"
            android:text="病历号"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrows" />
    </RelativeLayout>

    <include layout="@layout/hor_line" />

    <Button
        android:id="@+id/see_ill_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginTop="@dimen/more_large_margin"
        android:background="@drawable/selector_main_btn_bg"
        android:text="购买提交"
        android:textColor="@android:color/white"
        android:textSize="@dimen/large_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="温馨提示："
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/medium_size" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="1. 看病历流程："
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/small_size" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:text="2. 此为出名专家远程在线看病历，所有依据在于你您所上传的电子病历，请您详细填写资料和上传相关数据图片，让专家给你更准确的判断。"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/small_size" />

</LinearLayout>