<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:Android="http://schemas.android.com/tools"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/new_activity_title_bar"/>

    <com.eztcn.user.hall.views.ScrollViewForViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/margin_left_10"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/new_activity_select_appointment_time_headPic"
                    android:layout_width="@dimen/head_height_60"
                    android:layout_height="@dimen/head_height_60"
                    android:layout_margin="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_default_doctor_head_women"/>

                <TextView
                    android:id="@+id/new_activity_select_appointment_time_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_left_15"
                    android:layout_toRightOf="@+id/new_activity_select_appointment_time_headPic"
                    android:text="张医生"

                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_16"/>

                <ImageView
                    android:id="@+id/new_activity_select_appointment_time_doctor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_10"
                    android:layout_marginTop="@dimen/margin_top_18"
                    android:layout_toRightOf="@+id/new_activity_select_appointment_time_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_chief_doctor_orange"/>

                <TextView
                    android:id="@+id/new_activity_select_appointment_time_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_activity_select_appointment_time_name"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/new_activity_select_appointment_time_headPic"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="天津市第一中心医院"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/new_activity_select_appointment_time_department_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_activity_select_appointment_time_hospital_name"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/new_activity_select_appointment_time_headPic"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="消化门诊科"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_14"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/line_height_0.5"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="预约量"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/new_activity_select_appointment_time_count_appoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_5"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/line_height_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/line_color_gray"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="关注"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/new_activity_select_appointment_time_count_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_5"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_activity_select_appointment_time_rank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/margin_left_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_doctor_rank"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="排行"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:src="@drawable/new_right_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/line_height_0.5"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="本周排行"
                        android:textColor="@color/text_color_deep_gray"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/new_activity_select_appointment_time_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:drawablePadding="@dimen/margin_left_5"
                        android:drawableRight="@drawable/new_rank_add"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color_deep_gray"
                        android:textSize="@dimen/text_size_16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="本月排行"
                        android:textColor="@color/text_color_deep_gray"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/new_activity_select_appointment_time_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:drawablePadding="@dimen/margin_left_5"
                        android:drawableRight="@drawable/new_rank_add"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color_deep_gray"
                        android:textSize="@dimen/text_size_16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="年度排行"
                        android:textColor="@color/text_color_deep_gray"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/new_activity_select_appointment_time_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:drawablePadding="@dimen/margin_left_5"
                        android:drawableRight="@drawable/new_rank_add"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color_deep_gray"
                        android:textSize="@dimen/text_size_16"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_activity_select_appointment_time_open_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/margin_left_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_good_at"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="擅长"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_down_arrow"/>
            </LinearLayout>

            <TextView
                android:id="@+id/new_activity_select_appointment_time_good_at_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_height_0.5"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:padding="@dimen/margin_left_15"
                android:text="手动王金佛山电话佛山 说的佛寺设计费 说的佛山石佛寺及  活动费ISO自己佛教 说的佛事说的佛寺设计费 搜房奇偶缩水奇偶is佛is奇偶 时间佛我将是否iOSOS就是json时间佛教时间佛山大家时间佛教哦时间佛教 就搜房奇偶涉及到佛"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/margin_left_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_appointment_time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="预约时间"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_16"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_height_0.5"
                android:background="@color/white"
                android:paddingBottom="@dimen/margin_left_15">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_left_25"
                    android:layout_marginTop="@dimen/margin_left_12"
                    android:layout_toLeftOf="@+id/new_activity_select_appointment_time_time_top"
                    android:padding="@dimen/margin_left_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_left_arrow_slide"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/new_activity_select_appointment_time_time_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_left_12"
                    android:gravity="center_vertical"
                    android:text="04月18号-04月24号"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_25"
                    android:layout_marginTop="@dimen/margin_left_12"
                    android:layout_toRightOf="@+id/new_activity_select_appointment_time_time_top"
                    android:padding="@dimen/margin_left_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_right_arrow_slide"
                    android:visibility="gone"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_margin="@dimen/margin_left_15"
                    android:background="@color/white">
                </android.support.v4.view.ViewPager>
                <ImageView
                    android:id="@+id/new_week_table_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="330px"
                    android:src="@drawable/new_week_table_no_data"
                    android:scaleType="centerInside"
                    android:background="@color/white"
                    android:visibility="visible"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_45"
                android:layout_marginTop="@dimen/margin_left_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_appointment_rule"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="预约规则"
                    android:textColor="@color/text_color_deep_gray"
                    android:textSize="@dimen/text_size_16"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_height_0.5"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_left_15"
                android:paddingLeft="@dimen/margin_left_15"
                android:paddingRight="@dimen/margin_left_15"
                android:paddingTop="@dimen/search_margin_top_7"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_margin_top_7"
                    android:gravity="center_vertical"
                    android:text="1、预约成功后请在就诊当日准时到院就诊"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_margin_top_7"
                    android:gravity="center_vertical"
                    android:text="2、如需取消或变更预约，请在就诊日前一天取消预约，不可重复预约同一科室"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_margin_top_7"
                    android:gravity="center_vertical"
                    android:text="3、当月取消预约超过三次，将无法再次进行预约挂号等操作"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>
    </com.eztcn.user.hall.views.ScrollViewForViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_layout_height_65"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/white"
        android:gravity="center"
        >

        <Button
            android:id="@+id/new_activity_select_appointment_time_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@drawable/new_oval_button_commit_gray"
            android:text="确认"
            android:textColor="@color/button_color_gray"
            android:textSize="@dimen/large_size_18"
            />

    </LinearLayout>
</LinearLayout>
