<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jihuo_bg1"
        android:gravity="center"
        android:padding="@dimen/large_margin" >

        <ImageView
            android:id="@+id/cardCover"
            android:layout_width="@dimen/chat_bottom_height"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/healthcard_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康卡"
                android:textSize="@dimen/medium_size"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_card_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@android:color/white"
                android:text="卡号" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jihuo_bg2"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin" >

        <TextView
            android:id="@+id/item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="状态"
            android:textSize="@dimen/medium_size" />

        <TextView
            android:id="@+id/item_endvalidity_tv"
            style="@style/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/main_txt_color" />
    </RelativeLayout>

</LinearLayout>