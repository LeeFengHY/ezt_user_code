<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/new_activity_title_bar"></include>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/imageView_width_61"
            android:layout_height="@dimen/imageView_width_61"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_138"

            android:src="@drawable/new_change_hook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_left_15"
            android:text="@string/change_success"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_left_4"
            android:text="@string/use_new_account"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_13"
            android:text="@string/five_second"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16" />

    </LinearLayout>
</LinearLayout>