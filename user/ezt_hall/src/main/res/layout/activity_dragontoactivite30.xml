<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >
    <include layout="@layout/activity_title_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen311"
        android:layout_marginTop="@dimen/drug_w_mtline"
        android:background="@android:color/white" >

        <RelativeLayout
            android:id="@+id/cardLayout"
            android:layout_width="@dimen/dimen345"
            android:layout_height="@dimen/dimen208"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@drawable/conners_lightgrey" >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/drug_w_mtline"
                android:layout_marginTop="@dimen/dimen40"
                android:background="@android:color/white" >
            </View>
            <TextView
                android:id="@+id/active_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen80"
                android:text="您好！尚未开通龙卡服务"
                android:textColor="@color/drug_grey"
                android:textSize="@dimen/dimen16sp" />

            <Button
                android:id="@+id/bindCardBtn"
                android:layout_width="@dimen/dimen260"
                android:layout_height="@dimen/dimen50"
                android:layout_below="@id/active_hint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen15"
                android:background="@color/border_line"
                android:gravity="center"
                android:text="绑定龙卡"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen18sp" />
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cardLayout"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen15"
            android:background="@color/item_de_color" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen20" >
            <ImageView
                android:id="@+id/right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dragon_sright" />
            <TextView
                android:id="@+id/right1tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5"
                android:layout_toRightOf="@id/right1"
                android:text="专属医生指导挂号"
                android:textSize="@dimen/dimen14sp" />
            <ImageView
                android:id="@+id/right3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/right1"
                android:layout_marginTop="@dimen/dimen10"
                android:src="@drawable/dragon_sright" />
            <TextView
                android:id="@+id/right3tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/right3"
                android:layout_marginLeft="@dimen/dimen5"
                android:layout_toRightOf="@id/right3"
                android:text="免费享受VIP挂号提醒"
                android:textSize="@dimen/dimen14sp" />
            <ImageView
                android:id="@+id/right4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/right1"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_toRightOf="@id/right3tv"
                android:src="@drawable/dragon_sright" />
            <TextView
                android:id="@+id/right4tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/right4"
                android:layout_marginLeft="@dimen/dimen5"
                android:layout_toRightOf="@id/right4"
                android:text="享受8.8折优惠待遇"
                android:textSize="@dimen/dimen14sp" />
            <ImageView
                android:id="@+id/right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/right4"
                android:layout_toRightOf="@id/right1tv"
                android:src="@drawable/dragon_sright" />
            <TextView
                android:id="@+id/right2tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5"
                android:layout_toRightOf="@id/right2"
                android:text="赠送一次导诊服务"
                android:textSize="@dimen/dimen14sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>