<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_size" >

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:textColor="@color/drug_black" >
        </TextView>

        <TextView
            android:id="@+id/weekTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/dateTv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_toRightOf="@id/dateTv"
            android:textColor="@color/drug_black" />

        <TextView
            android:id="@+id/regTv"
            style="@style/smallText"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/medium_margin"
            android:background="@drawable/conners_w_button"
            android:focusable="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="预约"
            android:textColor="@color/main_color" />

    </RelativeLayout>

</LinearLayout>