<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/medium_margin"
    android:paddingRight="@dimen/medium_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_hor_height_mediue"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_dept_name"
            android:layout_width="@dimen/item_hor_bt_width"
            android:layout_height="@dimen/item_hor_height"
            android:background="@drawable/selector_dark_gray_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="@dimen/small_margin"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            android:paddingTop="@dimen/small_margin"
            android:text="肿瘤科"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/medium_size" />

    </LinearLayout>

</LinearLayout>