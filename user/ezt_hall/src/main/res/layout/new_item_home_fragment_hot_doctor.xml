<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:background="@drawable/new_round_frame_999999"
    android:gravity="center">

    <ImageView
        android:id="@+id/new_home_fragment_hot_doctor_iv_img_1"
        android:layout_marginTop="@dimen/dimen15"
        android:layout_marginBottom="@dimen/dimen15"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/new_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_home_fragment_hot_doctor_tv_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谷翠"
            android:textColor="@color/color_000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/new_home_fragment_hot_doctor_tv_dec_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="主治医师"
            android:textColor="@color/color_999999"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>