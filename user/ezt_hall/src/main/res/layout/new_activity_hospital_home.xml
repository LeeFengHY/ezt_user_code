<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/new_activity_title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/new_activity_hospital_home_hospital_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/new_hospital_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_alignBottom="@+id/new_activity_hospital_home_hospital_pic"
            android:alpha="0.4"
            android:background="@color/colorBlack"
            android:gravity="center_vertical">
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_alignBottom="@+id/new_activity_hospital_home_hospital_pic"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_activity_hospital_home_free_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="780"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="总放号量"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_height_0.5"
                android:layout_height="@dimen/line_height_26"
                android:background="#767676"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_activity_hospital_home_appoint_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="555"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="总预约量"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_70"
            android:layout_marginTop="@dimen/margin_left_10"
            android:background="@color/white"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_appointment_guahao"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="预约挂号"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="足不出户，一键挂号"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/new_not_open"
                    android:visibility="gone"/>

            </RelativeLayout>


            <View
                android:layout_width="@dimen/line_height_0.5"
                android:layout_height="match_parent"
                android:background="@color/line_color_gray"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout_drug"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_appointment_drag"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="预约药品"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="热销药品，轻松约"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_current_guahao"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="当日挂号"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="在线挂号在线挂号"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/new_activity_hospital_home_is_open_drug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/new_not_open"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_70"
            android:layout_marginTop="@dimen/line_height_0.5"
            android:background="@color/white"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout_check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_appointment_check"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="预约检查"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="即刻预约，轻松检查"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/new_activity_hospital_home_is_open_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/new_not_open"
                    android:visibility="gone"/>

            </RelativeLayout>


            <View
                android:layout_width="@dimen/line_height_0.5"
                android:layout_height="match_parent"
                android:background="@color/line_color_gray"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout_bed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_appointment_bed"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="预约病床"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="免费预约，便捷入院"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/new_activity_hospital_home_is_open_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/new_not_open"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_70"
            android:layout_marginTop="@dimen/line_height_0.5"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_appointment_drag"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="预约药品"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="在线挂号在线挂号"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/new_not_open"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/line_height_0.5"
                android:layout_height="match_parent"
                android:background="@color/line_color_gray"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:src="@drawable/new_copy_patient_info"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_18"
                            android:gravity="center_vertical"
                            android:text="复印病历"
                            android:textColor="@color/text_color_deep_gray"
                            android:textSize="@dimen/text_size_16"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left_5"
                            android:gravity="center_vertical"
                            android:text="在线挂号在线挂号"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/text_size_12"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/new_not_open"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_activity_hospital_home_intro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/margin_left_10"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:scaleType="centerCrop"
            android:src="@drawable/new_hospital_simple_intro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_5"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="医院简介"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left_15"
            android:scaleType="centerCrop"
            android:src="@drawable/new_right_arrow"/>
    </LinearLayout>


</LinearLayout>
