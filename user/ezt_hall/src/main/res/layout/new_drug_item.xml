<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_left_15"
    android:layout_marginRight="@dimen/margin_right_15"
    android:layout_marginTop="10dp"
    android:background="@drawable/new_feature_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_order_drug"
        android:layout_width="345dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_right_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drug_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:src="@drawable/new_drug" />

        <TextView
            android:id="@+id/drug_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_toRightOf="@id/drug_iv"
            android:text="@string/order_drug"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_right_15"
            android:text="@string/order_drug_text"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_13" />

    </RelativeLayout>


</RelativeLayout>