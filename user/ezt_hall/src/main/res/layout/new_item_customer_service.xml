<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:id="@+id/customer_service_telephone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_55"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_service_hint"
            android:textColor="@color/border_line"
            android:textSize="@dimen/large_size_18"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background"
        ></View>
    <RelativeLayout
        android:id="@+id/cancel_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="@dimen/large_size_18"
            android:textColor="@color/text_color_gray"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</LinearLayout>