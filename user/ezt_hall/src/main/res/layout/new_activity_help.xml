<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        layout="@layout/new_activity_title_bar" />
  <include layout="@layout/new_activity_view_margin_bar"></include>

    <RelativeLayout
        android:id="@+id/hot_line_relayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/customer_service_hotLine"
            android:textSize="@dimen/big_size_16"
            android:textColor="@color/text_color_deep_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/user_margin_right"
            android:layout_centerVertical="true"
            android:text="@string/hotLine_telephone"
            android:textSize="@dimen/user_name_size"
            android:textColor="@color/user_item_tx_color"
            />
    </RelativeLayout>
    <include layout="@layout/hor_line"></include>
    <RelativeLayout
        android:id="@+id/suggest_feedback_relayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@drawable/selector_setting_item_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="@string/suggestFeedback"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/user_margin_right"
            android:src="@drawable/new_next_icon" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_line"
        android:background="@color/line_margin_widget_color" />
    <RelativeLayout
        android:id="@+id/function_introduce_relayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_height"
        android:background="@drawable/selector_setting_item_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:textSize="@dimen/big_size_16"
            android:textColor="@color/text_color_deep_gray"
            android:text="@string/functionIntroduction"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/user_margin_right"
            android:src="@drawable/new_next_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background" />

</LinearLayout>
