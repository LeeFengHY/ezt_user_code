<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/hint_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_check_fail_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/user_margin_right"
            />
        <TextView
            android:id="@+id/hint_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hint_icon"
            android:layout_marginLeft="@dimen/user_margin_right"
            android:textColor="@color/main_color"
            android:textSize="@dimen/large_size"
            android:text="退号操作"
            />
    </RelativeLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_color"
        android:layout_marginLeft="@dimen/user_margin_right"
        android:layout_marginRight="@dimen/user_margin_right"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/choice_check_order_button_layout_height"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/head_icon_name_margin_left"
        android:paddingLeft="@dimen/user_margin_right"
        android:paddingRight="@dimen/user_margin_right"
        android:paddingTop="@dimen/head_icon_name_margin_left" 
        >
        <Button
            android:id="@+id/cancel"
            style="@style/largeText"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_button_top"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_button_margin_top"
            android:layout_weight="1"
            android:background="@drawable/selector_main_btn_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_button_tx_size" />
        <Button
            android:id="@+id/sure"
            style="@style/largeText"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_button_top"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/user_margin_right"
            android:layout_marginTop="@dimen/login_button_margin_top"
            android:layout_weight="1"
            android:background="@drawable/selector_main_btn_bg"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_button_tx_size" />
    </LinearLayout>

</LinearLayout>
