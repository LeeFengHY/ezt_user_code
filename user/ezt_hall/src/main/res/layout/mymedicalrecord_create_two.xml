<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_bar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/user_margin_right"
            android:paddingRight="@dimen/user_margin_right"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/intro_symptom"
                style="@style/mediumText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@android:color/white"
                android:gravity="top|left"
                android:lines="4"
                android:hint="症状和检验报告等相关检查描述"
                android:padding="@dimen/medium_margin"
                android:textColor="@color/dark_black"
               >
            </EditText>

            <EditText
                android:id="@+id/intro_diagnose"
                style="@style/mediumText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@android:color/white"
                android:gravity="top|left"
                android:hint="医生诊断描述"
                 android:lines="4"
                android:padding="@dimen/medium_margin"
                android:textColor="@color/dark_black"
               >
            </EditText>

            <EditText
                android:id="@+id/intro_drug_use"
                style="@style/mediumText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@android:color/white"
                android:gravity="top|left"
                android:hint="用药情况"
                 android:lines="4"
                android:padding="@dimen/medium_margin"
                android:textColor="@color/dark_black"
               >
            </EditText>
            
            <EditText
                android:id="@+id/intro_allergy"
                style="@style/mediumText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@android:color/white"
                android:gravity="top|left"
                android:hint="药物过敏史"
                android:lines="4"
                android:padding="@dimen/medium_margin"
                android:textColor="@color/dark_black" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/password_margin_top"
                android:weightSum="2" >

                <Button
                    android:id="@+id/last_step_bt"
                    style="@style/largeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_btn_bg"
                    android:gravity="center"
                    android:text="上一步"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/next_step_bt"
                    style="@style/largeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_main_btn_bg"
                    android:gravity="center"
                    android:text="完 成"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>