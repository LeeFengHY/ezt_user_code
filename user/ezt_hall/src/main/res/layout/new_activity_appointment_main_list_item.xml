<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white"
              android:paddingLeft="@dimen/margin_left_15"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_left_15">
        <TextView
            android:id="@+id/new_activity_appointment_main_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxWidth="280dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="北京友谊医院国际医疗中心"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_color_deep_gray"/>
        <ImageView
            android:id="@+id/new_activity_appointment_main_list_item_sanjia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/new_sanjia"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:layout_marginRight="@dimen/margin_left_15"
            android:scaleType="centerInside"
            android:gravity="left"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_left_15"
        android:paddingTop="@dimen/margin_left_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="月预约量"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_color_gray"/>
        <TextView
            android:id="@+id/new_activity_appointment_main_list_item_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left_5"
            android:text="180"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/border_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="年放号量"
            android:textSize="@dimen/text_size_12"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:textColor="@color/text_color_gray"/>
        <TextView
            android:id="@+id/new_activity_appointment_main_list_item_all_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="58"
            android:textSize="@dimen/text_size_13"
            android:layout_marginLeft="@dimen/margin_left_5"
            android:textColor="@color/border_line"/>
    </LinearLayout>

</LinearLayout>
