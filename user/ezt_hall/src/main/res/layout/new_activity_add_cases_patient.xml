<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/new_activity_title_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/margin_left_10"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="@string/name"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16"/>

        <EditText
            android:id="@+id/patient_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@null"
            android:hint="请输入真实的姓名"
            android:textColor="@color/text_color_gray"
            android:textColorHint="@color/colorDark"
            android:textSize="@dimen/big_size_16"
            android:gravity="right|center_vertical"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choose_sex_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="性别"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16"/>

        <TextView
            android:id="@+id/patient_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@null"
            android:hint="请选择"
            android:textColorHint="@color/text_color_gray"
            android:textColor="@color/text_color_gray"
            android:gravity="center"
            android:textSize="@dimen/big_size_16"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="医保卡号"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16"/>

        <EditText
            android:id="@+id/health_insurance_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@null"
            android:hint="选填"
            android:textColor="@color/text_color_gray"
            android:textColorHint="@color/colorDark"
            android:textSize="@dimen/big_size_16"
            android:gravity="right|center_vertical"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/id_number_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:src="@drawable/new_id_number_star_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/id_number_image"
            android:text="@string/id_number"
            android:textSize="@dimen/big_size_16"
            />
        <EditText
            android:id="@+id/patient_id_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@null"
            android:hint="一经填写无法修改，请谨慎填写"
            android:textColor="@color/text_color_gray"
            android:textColorHint="@color/colorDark"
            android:textSize="@dimen/big_size_16"
            android:gravity="right|center_vertical"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/health_insurance_location_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="医保所在地"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16"/>

        <TextView
            android:id="@+id/health_insurance_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@null"
            android:hint="请选择"
            android:textColorHint="@color/text_color_gray"
            android:textColor="@color/text_color_gray"
            android:gravity="center"
            android:textSize="@dimen/big_size_16"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/patient_mobile_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="手机号"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16"/>

        <EditText
            android:id="@+id/patient_mobile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_15"
            android:background="@null"
            android:hint="用于接收预约短信，请谨慎填写"
            android:textColor="@color/text_color_gray"
            android:textColorHint="@color/colorDark"
            android:textSize="@dimen/big_size_16"
            android:digits="@string/new_login_digits"
            android:gravity="right|center_vertical"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginTop="@dimen/line_height_0.5"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/verify_code_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_15"
            android:text="@string/verify_code"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/big_size_16" />

        <TextView
            android:id="@+id/get_code_hint_tx"
            android:layout_width="@dimen/get_code_width_73"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_left_15"
            android:text="获取验证码"
            android:textColor="@color/text_color_gray" />

        <View
            android:id="@+id/get_code_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_left_15"
            android:layout_toLeftOf="@id/get_code_hint_tx"
            android:background="@color/background"></View>

        <EditText
            android:id="@+id/verification_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_bottom_20"
            android:layout_toLeftOf="@id/get_code_line"
            android:layout_toRightOf="@id/verify_code_tx"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="@dimen/big_size_16"
            android:textColor="@color/text_color_gray"
            android:textColorHint="@color/colorDark"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_15"
        android:layout_marginTop="@dimen/margin_top_13"
        android:lineSpacingExtra="6dp"
        android:text="@string/patient_details_hint"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/normal_size_14" />
</LinearLayout>
