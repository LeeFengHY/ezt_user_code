<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/famdocImg"
        android:layout_width="@dimen/doc_img_width_normal"
        android:layout_height="@dimen/doc_img_width_normal"
        android:src="@drawable/famdocr" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_toRightOf="@id/famdocImg" >

        <TextView
            android:id="@+id/docName"
            style="@style/largeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2" >
        </TextView>

        <TextView
            android:id="@+id/docPosition"
            style="@style/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/docName"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/main_txt_color" >
        </TextView>

        <TextView
            android:id="@+id/docGoodAt"
            style="@style/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/docPosition"
            android:background="@drawable/conners_fd"
            android:padding="@dimen/small_margin"
            android:singleLine="true"
            android:text="12"
            android:textColor="#231000" >
        </TextView>
    </RelativeLayout>

</RelativeLayout>