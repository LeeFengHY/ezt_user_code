<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/large_margin" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/account"
            style="@style/mediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_login_account"
            android:drawablePadding="@dimen/small_margin"
            android:ems="10"
            android:hint="请输入会员号/手机号/身份证号"
            android:singleLine="true" >
        </EditText>

        <ImageView
            android:id="@+id/accountDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/medium_margin"
            android:src="@drawable/edit_del"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/password"
            style="@style/mediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/register_digits"
            android:drawableLeft="@drawable/ic_login_pw"
            android:drawablePadding="@dimen/small_margin"
            android:ems="10"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/pwdDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/medium_margin"
            android:src="@drawable/edit_del"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/automatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="自动登录"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/medium_size" />
    </RelativeLayout>

    <Button
        android:id="@+id/login"
        style="@style/largeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/more_large_margin"
        android:background="@drawable/selector_main_btn_bg"
        android:gravity="center"
        android:text="登 录"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:gravity="center" >

        <TextView
            android:id="@+id/register"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册会员"
            android:textColor="@color/main_color" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            layout="@layout/ver_line"
            android:background="@color/dark_gray" />

        <TextView
            android:id="@+id/forgetPwd"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/main_color" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:gravity="center"
            android:text="温馨提示：若您忘记手机号，请登录医指通官网www.eztcn.com进行申请修改"
            android:textColor="@color/dark_gray2"
            android:textSize="@dimen/small_size" />
    </RelativeLayout>

</LinearLayout>