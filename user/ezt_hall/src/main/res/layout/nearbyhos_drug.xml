<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_bar_size"
        android:paddingBottom="3dp"
        android:background="@android:color/white"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/nearbyHos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周边医院" />

        <include layout="@layout/ver_line" />

        <TextView
            android:id="@+id/nearbyDrug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周边药店" />
    </LinearLayout>

    <View
        android:id="@+id/pageLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_main_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/content_vPager"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:persistentDrawingCache="animation" />

</LinearLayout>