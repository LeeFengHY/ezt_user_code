        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height_size"
            android:layout_marginLeft="@dimen/user_margin_right"
            android:gravity="center_vertical" 
            >

            <TextView
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名" />

            <EditText
                android:id="@+id/name"
                style="@style/mediumText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="center_vertical|right"
                android:maxLength="5"
                android:paddingRight="@dimen/user_margin_right"
                android:singleLine="true"
                android:textColor="#aaaaaa" >
            </EditText>

            <TextView
                android:id="@+id/auth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@drawable/selector_main_btn_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/small_size"
                android:paddingRight="@dimen/small_size"
                android:text="实名认证"
                android:textColor="@android:color/white"
                android:textSize="@dimen/small_size"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/user_margin_right"
                android:layout_height="1dp" 
                android:visibility="gone"
                />
        </LinearLayout>
