<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
     <include
         layout="@layout/activity_title_bar" />
     <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/view_light_gray_height"
         android:background="@color/view_margin_widget_color" />

     <RelativeLayout 
         android:id="@+id/hot_line_relayout"
         android:layout_width="match_parent"
         android:layout_height="@dimen/user_item_height"
         android:background="@color/bg_white"
         >
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/user_margin_right"
             android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
             android:text="@string/customer_service_hotline"
             android:textSize="@dimen/user_name_size"
             android:textColor="@color/user_item_tx_color"
             />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginRight="@dimen/user_margin_right"
             android:layout_centerVertical="true"
             android:text="@string/hotline_telphone"
             android:textSize="@dimen/user_name_size"
             android:textColor="@color/user_item_tx_color"
             />
     </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_line"
        android:background="@color/line_margin_widget_color" />
<RelativeLayout
    android:id="@+id/suggest_feedback_relayout"
         android:layout_width="match_parent"
         android:layout_height="@dimen/user_item_height"
         android:background="@drawable/selector_setting_item_bg"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/user_margin_right"
             android:text="@string/suggest_feedback"
             android:textColor="@color/user_item_tx_color"
             android:textSize="@dimen/user_name_size" />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/user_margin_right"
             android:src="@drawable/user_arrow_icon_gray" />
	</RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_line"
        android:background="@color/line_margin_widget_color" />
     <RelativeLayout 
         android:id="@+id/function_introduce_relayout"
         android:layout_width="match_parent"
         android:layout_height="@dimen/user_item_height"
         android:background="@drawable/selector_setting_item_bg"
         >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/user_margin_right"
             android:textSize="@dimen/user_name_size"
             android:textColor="@color/user_item_tx_color"
            android:text="@string/function_introduction"
             />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/user_margin_right"
             android:src="@drawable/user_arrow_icon_gray" />
         
     </RelativeLayout>

     <View
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="@color/view_margin_widget_color" />
     
</LinearLayout>
