<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_bg"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/checkitemIv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/more2_large_margin"
        android:background="@drawable/cimr" />
<!--     android:layout_alignTop="@id/checkitemIv" -->
    <TextView
        android:id="@+id/itemTitleTv"
        style="@style/mediumText"
        android:layout_width="wrap_content"
        android:singleLine="false"
        android:maxEms="12"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_toRightOf="@id/checkitemIv"
   		android:layout_marginTop="@dimen/medium_margin"
        android:text="分泌物分泌物分泌物分泌物分泌物分泌物" />

    <TextView
        android:id="@+id/itemAddressTv"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itemTitleTv"
        android:layout_centerVertical="true"
        android:text="分泌物"
        android:textColor="@color/main_txt_color" />
<!--   android:layout_alignBottom="@id/checkitemIv" -->
    <TextView
        android:layout_marginBottom="@dimen/medium_margin"
        android:id="@+id/itemcostTypeTv"
        style="@style/smallText"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itemTitleTv"
        android:text="检查费:"
        android:textColor="@color/main_txt_color" />

    <TextView
        android:id="@+id/itemCostValTv"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itemcostTypeTv"
        android:layout_alignBottom="@+id/itemcostTypeTv"
        android:layout_toRightOf="@+id/itemcostTypeTv"
        android:text="分泌物"
        android:textColor="@color/red" />

    <!-- <CheckBox -->
    <!-- android:id="@+id/itemcheck" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignParentRight="true" -->
    <!-- android:layout_centerVertical="true" -->
    <!-- android:layout_marginRight="@dimen/more2_large_margin" -->
    <!-- android:background="@drawable/selector_check_big_style" -->
    <!-- android:button="@null" -->
    <!-- android:checked="false" -->
    <!-- android:clickable="false" -->
    <!-- android:enabled="false" -->
    <!-- android:focusable="false" -->
    <!-- android:gravity="center" -->
    <!-- android:textColor="@color/main_color" /> -->

    <ImageView
        android:id="@+id/itemcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/more2_large_margin"
        android:src="@drawable/cichecked" />

</RelativeLayout>

</LinearLayout>